export function max(a, b)
    if a > b then
        return a
    else
        return b
    end
end

export function min(a, b)
    if a < b then
        return a
    else
        return b
    end
end

export function abs(n)
    if n < 0 then
        return -n
    else
        return n
    end
end

export function clamp(val, val_min, val_max)
    return max(val_min, min(val_max, val))
end